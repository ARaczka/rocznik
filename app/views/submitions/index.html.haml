.scroll-panel-header
  = link_to "Nowe zgłoszenie", new_submition_path, class: %w{btn btn-default btn-sm pull-right}
  %h3.scroll-panel-title Zgłoszone artykuły
.scroll-panel-body
  %table.table.table-hover.table-admin
    %thead
      %tr
        %th Tytuł
        %th Autor korespondujący
        %th Redaktor
        %th Data nadesłania
        %th Status
        %th
    %tbody
      - @submitions.each do |submition|
        %tr.table-row-link
          %td= link_to submition.title, submition
          %td
            - if submition.author
              = link_to submition.corresponding_author, submition.author
            - else
              = submition.corresponding_author
          %td
            - if submition.person
              = link_to submition.editor, submition.person
            - else
              = submition.editor
          %td= submition.received.strftime("%d-%m-%Y")
          %td{class: "#{Submition::STATUS_MAPPING[submition.status]}"}= submition.status
          %td.text-right
            = destroy_button(submition,"Czy na pewno chcesz usunąć to zgłoszenie")

%meta{:name => "citation_title", :content => @article.title}
- @article.authors_metadata.each do |author|
  %meta{:name => "citation_author", :content => author}
%meta{:name => "citation_publication_date", :content => @article.year}
%meta{:name => "citation_journal_title", :content => "Rocznik Kognitywistyczny"}
%meta{:name => "citation_issue", :content => @article.issue_title}

.scroll-panel-header
  = link_to "Artykuły", articles_path, class: %w{btn btn-default btn-sm pull-right}
  %h3.scroll-panel-title
    = @article.title
.scroll-panel-body
  %dl
    %dt Autorzy
    %dd= @article.authors_inline
  %dl
    %dt Affiliacje
    %dd= @article.affiliations
  %dl
    %dt Numer
    %dd= @article.issue_title
  %dl
    %dt Streszczenie
    %dd= @article.abstract
  %dl
    %dt Slowa kluczowe
    %dd= @article.keywords
  %dl
    %dt Strony
    %dd= @article.article_pages
  %dl
    %dt Link do ściągnięcia artykułu
    %dd= @article.link
  %dl
    %dt Status
    %dd{class: "#{Article::STATUS_MAPPING[@article.status]}"}= @article.status

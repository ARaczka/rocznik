.scroll-panel-header
  = link_to "Anuluj", @affiliation.person, class: %w{btn btn-default btn-sm pull-right}
  %h3.scroll-panel-title
    Dodaj afiliację dla
    %strong
      = @affiliation.person_name
.scroll-panel-body
  = simple_form_for @affiliation, url: affiliations_path do |f|
    = f.input :person_id, as: :hidden
    = f.input :country, label: "Państwo", as: :string
    = f.input :institution, label: "Instytucja"
    = f.input :department, label: "Wydział/instytut"
    = f.input :year_from, label: "Rok od"
    = f.input :year_to, label: "Rok do"
    = f.submit "Dodaj", class: %w{btn btn-primary btn-outline}

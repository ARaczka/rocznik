= simple_form_for @author_recommendation do |f|
  = f.input :name, label: "Imię"
  = f.input :surname, label: "Nazwisko"
  = f.input :email, label: "E-mail"
  = f.input :sex, collection: Person::SEX_MAPPING.keys, label: "Płeć"
  = f.hidden_field :roles, value: "recenzent", label: "Role", name: "person[roles][]"
 
  - label = @person.new_record? ? "Dodaj proponowanego recenzenta" : "Zapisz"
  = f.submit label, class: %w{btn btn-primary btn-outline}
  - label = @author_recommendation? ? "Zakończ dodawanie recenzentów" : "Zakończ"
  = f.submit label, class: %w{btn btn-primary btn-outline}

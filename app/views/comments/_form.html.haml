.scroll-panel-header
  = link_to "Anuluj", @comment.article_revision, class: %w{btn btn-default btn-sm pull-right}
  %h3.scroll-panel-title
    Dodaj komentarz do wersji artykułu
    %strong
      = @comment.article_revision
.scroll-panel-body
  = simple_form_for @comment do |f|
    = hidden_field_tag :person_id, @comment.person_id
    = hidden_field_tag :article_revision, @comment.article_revision_id
    = f.input :content, label: "Treść"
    = f.submit "Dodaj", class: %w{btn btn-primary btn-outline}
